#include<stdio.h>
#include<conio.h>
#include<math.h>
void main()
{
	int sayi;
	int a,b,c,d;
	int sayac=1;
		printf("Lutfen 4 Basamakli Bir Sayi Giriniz:");
		scanf("%d", &sayi);
		
		    d=sayi%10;
            c= sayi/10%10;
            b=sayi/100%10;
            a=sayi/1000%10;
	if(a!=b && b!=c && c!=d)
	{
		printf("Sayi d√∂rt farkli basamaktan olusmaktadir.", sayac);
	}
	
	if(a!=b && a!=c && a!=d)
		sayac++;
	if(b!=c && b!=d)
		sayac++;
	if(c!=d)
		sayac++;
	printf("%d farkli rakam vardir", sayac);
	getch();
}
